<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>List Of Stages</title>
  <%- include('templates/head.ejs') %>
</head>

<body>
  <%- include('templates/header.ejs', {active: 'stages' }) %>
    <main>
     
      <div class="center">
        <h2> <%= stageName %> </h2>
      </div>
     
      <% if(stages.length) { %>
       
        <table>
          <thead>
            <th>Image</th>
            <th>Performer</th>
            <th>Date</th>
            <th>Time</th>
          </thead>
          <tbody>
            <% for(let stage of stages){ %>
              <tr>
                <td>
                  <img src="<%= stage.PerformerImageUrl %>" alt="<%= stage.Name %>" width="100" height="100">
                </td>
                <td>
                  <%= stage.PerformerName %>
                </td>
                <td>
                  <%= stage.Date %>
                </td>
                <td>
                  <%= stage.Time %>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
        <% } else { %>
          <div>No Concert Available...</div>
          <% } %>
          <div class="m-top-2">
            <a class="button" href="/stage"><<< Back to Stages</a>
          </div>
    </main>
    <%- include('templates/footer.ejs') %>

</body>

</html>